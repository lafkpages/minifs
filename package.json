{
  "name": "@luisafk/minifs",
  "version": "3.0.0",
  "description": "An in-memory filesystem-like data structure.",
  "author": "LuisAFK",
  "repository": "https://github.com/lafkpages/minifs.git",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "^1.1.8",
    "auto-changelog": "^2.4.0",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --minify && tsc --emitDeclarationOnly --declaration --outDir dist --target es2017 src/index.ts",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build",
    "changelog": "auto-changelog"
  },
  "files": [
    "dist"
  ],
  "auto-changelog": {
    "commitLimit": false,
    "ignoreCommitPattern": "^[Cc]hangelog$|\\[nc\\]|^(style|docs|ci)(\\(.+\\))?: ",
    "unreleased": true
  }
}
