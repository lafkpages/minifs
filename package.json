{
  "name": "@luisafk/minifs",
  "version": "1.0.3",
  "description": "An in-memory filesystem-like data structure.",
  "author": "LuisAFK",
  "repository": "https://github.com/lafkpages/minifs.git",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "bun-types": "latest",
    "prettier": "^3.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --minify && tsc --emitDeclarationOnly --declaration --outDir dist --target es6 src/index.ts",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build",
    "changelog": "auto-changelog"
  },
  "files": [
    "dist"
  ],
  "auto-changelog": {
    "commitLimit": false,
    "ignoreCommitPattern": "^[Cc]hangelog$|\\[nc\\]",
    "unreleased": true
  }
}
